<%- include('./partials/header') %>

<div class="flex flex-col items-start justify-center min-h-screen px-5 py-10 gap-10">
  <% products.forEach(product => { %>
  <div class="w-full flex flex-col md:flex-row items-start justify-between bg-white shadow-lg rounded-md overflow-hidden mb-10">
    <div class="w-full md:w-1/3">
      <div class="h-80 bg-yellow-500 flex items-center justify-center">
        <img src="<%= product.image %>" alt="product-image">
      </div>
      <div class="px-5 py-4">
        <h3 class="text-2xl font-semibold text-gray-800"><%= product.name %></h3>
      </div>
    </div>

    <div class="w-full md:w-2/3 px-5 py-4">
      <h3 class="text-xl font-semibold text-gray-800 mb-5">Price Breakdown</h3>
      <div class="space-y-3">
        <div class="flex justify-between">
          <h4 class="text-gray-600">Total Price</h4>
          <h4 class="text-gray-800">$ <%= product.price %></h4>
        </div>
        <div class="flex justify-between">
          <h4 class="text-gray-600">Discount</h4>
          <h4 class="text-red-600">-$ <%= product.discount %></h4>
        </div>
        <div class="flex justify-between">
          <h4 class="text-gray-600">Platform Fee</h4>
          <h4 class="text-gray-800">$ 20</h4>
        </div>
        <div class="flex justify-between">
          <h4 class="text-gray-600">Shipping Fee</h4>
          <h4 class="text-green-600">FREE</h4>
        </div>
      </div>
      <div class="w-full h-[1px] bg-gray-300 my-5"></div>
      <div class="flex justify-between items-center">
        <h3 class="text-xl font-semibold text-gray-800">Total Amount</h3>
        <h3 class="font-bold text-xl text-green-600">$ <%= product.price - product.discount + 20 %></h3>
      </div>
    </div>
  </div>
  <% }) %>
</div>

<%- include('./partials/footer') %>
